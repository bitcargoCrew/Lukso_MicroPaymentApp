{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./build",
      "rootDir": "./app",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["app/**/*.ts"],
    "exclude": ["node_modules", "build"]
}  